<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/fragment_profile"
    android:background="@drawable/bg_write_cornet_16"
    android:layout_margin="16dp">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_write_cornet_16_top_left_top_right"
        android:fontFamily="@font/svn_gilroy_heavy"
        android:gravity="center"
        android:text="Notification"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TableLayout
        android:layout_width="379dp"
        android:layout_height="300dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="1.0">

        <TableLayout
            android:id="@+id/layoutTablePro"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/txtFullNameProfile"
            tools:ignore="MissingConstraints">

            <TableRow>

                <EditText
                    android:id="@+id/edtTitleNotifi"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:backgroundTint="@color/colorGrey"
                    android:fontFamily="@font/svn_gilroy_medium"
                    android:hint="Tiêu đề"
                    android:inputType="textMultiLine"
                    android:textColor="@color/black"
                    android:textColorHint="@color/colorGrey"
                    android:textSize="20sp"
                    tools:ignore="TouchTargetSizeCheck" />
            </TableRow>

            <TableLayout
                android:layout_height="59dp"
                android:layout_marginTop="10dp">

                <EditText
                    android:id="@+id/edtDescNotifi"
                    android:layout_width="306dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorGrey"
                    android:fontFamily="@font/svn_gilroy_medium"
                    android:layout_marginBottom="10dp"
                    android:hint="Description"
                    android:inputType="textPersonName"
                    android:textColor="@color/black"
                    android:textColorHint="@color/colorGrey"
                    android:textSize="20dp"
                    tools:ignore="TouchTargetSizeCheck" />


            </TableLayout>
            <TableLayout
                android:layout_height="59dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/edtUserNotifi"
                    android:layout_width="306dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorGrey"
                    android:fontFamily="@font/svn_gilroy_medium"
                    android:hint="Chọn Người gửi"
                    android:textColor="@color/black"
                    android:textColorHint="@color/colorGrey"
                    android:textSize="20dp"
                    tools:ignore="TouchTargetSizeCheck"
                    android:drawableEnd="@drawable/ic_down_gray"
                    />


            </TableLayout>

            <Button
                android:id="@+id/btnSendDialogNotifi"
                android:layout_width="412dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/border_radius"
                android:backgroundTint="@color/colorBlueLogin"
                android:fontFamily="@font/svn_gilroy_medium"
                android:text="SEND"
                android:textColor="@color/white"
                android:textSize="15dp">

            </Button>
        </TableLayout>


    </TableLayout>


</androidx.constraintlayout.widget.ConstraintLayout>