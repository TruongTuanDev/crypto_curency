<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:id="@+id/item_watchlist"
    android:background="@drawable/coin_radius">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#252f43"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:id="@+id/watchlist_img"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:src="@drawable/bitcoin" />

            <LinearLayout
                android:layout_width="86dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/watchlist_symbol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/svn_gilroy_bold"
                    android:text="BTC"
                    android:textColor="#FFFFFF"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/watchlist_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/svn_gilroy_medium"
                    android:orientation="vertical"
                    android:text="Bitcoin"
                    android:textColor="#FFFFFF"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="108dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/watchlist_changelogo"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_caret_up" />

                    <TextView
                        android:id="@+id/watchlist_change"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/svn_gilroy_medium"
                        android:text="99%"
                        android:textColor="#FFFFFF"
                        android:textSize="14dp" />
                </LinearLayout>


                <TextView
                    android:id="@+id/watchlist_price"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/svn_gilroy_medium"
                    android:orientation="vertical"
                    android:text="$699"
                    android:textColor="#FFFFFF"
                    android:textSize="14dp" />
            </LinearLayout>

<!--            <ImageView-->
<!--                android:id="@+id/watchlist_chart"-->
<!--                android:layout_width="98dp"-->
<!--                android:layout_height="50dp"-->
<!--                android:layout_marginLeft="15dp"-->
<!--                android:src="@drawable/bitcoin" />-->

            <ImageView
                android:id="@+id/watchlist_star"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_star_fill" />
        </LinearLayout>


    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>