<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/coin_radius"
    android:layout_marginBottom="5dp"
    android:id="@+id/idCoinWallet"
    android:padding="16dp">

    <!-- Ảnh đồng coin -->
    <ImageView
        android:id="@+id/ivCoinImage"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center_vertical"
        />

    <!-- Thông tin chi tiết -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingLeft="16dp">

        <!-- Tên đồng coin -->
        <TextView
            android:id="@+id/tvCoinName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coin Name"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Số lượng coin đã mua -->
        <TextView
            android:id="@+id/tvCoinQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số lượng: 0.0"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <!-- Tổng tiền quy đổi ra VND -->
        <TextView
            android:id="@+id/tvTotalVND"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tổng tiền: 0 VND"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>
